#ifndef YOUR_CPP_APP_TEMPLATE_PROJECT_GLOBAL_DECLS_H
#define YOUR_CPP_APP_TEMPLATE_PROJECT_GLOBAL_DECLS_H

#include <string>

/// @brief Global declaration for the project by CMake variables
namespace project_decls {

/// @brief Global project' binary name
const std::string PROJECT_NAME = "${PROJECT_BINARY_NAME}" ;
/// @brief Global project' build version
const std::string PROJECT_BUILD_VERSION = "${PROJECT_VERSION}" ;
/// @brief Global project' configure git commit hash
const std::string PROJECT_BUILD_COMMIT = "${PROJECT_GIT_COMMIT}" ;
/// @brief Global project' CMake configure date
const std::string PROJECT_CONFIGURE_DATE = "${PROJECT_CONFIGURE_DATE}" ;
/// @brief Global project' flatpak App URL
const std::string PROJECT_FLATPAK_URL = "${FLATPAK_PROJECT_URL}" ;
const std::string PROJECT_MAINTAINER = "${PROJECT_MAINTAINER}" ;
const std::string PROJECT_MAINTAINER_EMAIL = "${PROJECT_MAINTAINER_EMAIL}" ;
const std::string PROJECT_HOMEPAGE_URL = "${CMAKE_PROJECT_HOMEPAGE_URL}" ;
const std::string PROJECT_DESCRIPTION = "${CMAKE_PROJECT_DESCRIPTION}";

} // namespace project_decls

#endif // YOUR_CPP_APP_TEMPLATE_PROJECT_GLOBAL_DECLS_H
